{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Emissions by State",
    "data": {"url": "https://raw.githubusercontent.com/lucasenders/FIT3179/refs/heads/main/week10_homework/data/states_emissions.csv"},
    "width": "container",
    "height": "container",
    "background": "rgb(245, 245, 245)",
    "params": [
        {
            "name": "year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 1990,
                "max": 2022,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == year_selection"
        }
    ],
    "layer": [
        {
            "mark": {"type":"bar", "fill": "yellow"},
            "encoding": {
                "x": {
                    "field": "Total_Emissions",
                    "type": "quantitative",
                    "title": "CO₂ Emissions (Mt)"
                },
                "y": {
                    "field": "State", 
                    "type": "nominal",
                    "sort": "x",
                    "title":""
                },
                "tooltip": [
                  {"field": "State", "title": "State"},
                  {"field": "Year", "title": "Year"},
                {"field": "Total_Emissions", "title" : "CO₂ Emissions"}]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 3
            },
            "encoding": {
                "text": {
                    "field": "Total_Emissions",
                    "type": "quantitative"
                },
                "x": {
                    "field": "Total_Emissions",
                    "type": "quantitative",
                    "format": ","
                },
                "y": {
                    "field": "State", 
                    "type": "nominal",
                    "sort": "x"
                },
                "tooltip": [
                  {"field": "State", "title": "State"},
                  {"field": "Year", "title": "Year"},
                {"field": "Total_Emissions", "title" : "CO₂ Emissions", "format": ","}]
            }
        }
    ]
    
}
